<form action="/movies/<%= @movie[:id] %>" method="post">
  <div class="">
    <label>Title</label>
    <input type="text" name="title" value="<%= @movie[:title] %>" placeholder="Insert title">
  </div>
  <div class="">
    <label>Body</label>
    <input type="text" name="body" value="<%= @movie[:body] %>" placeholder="Insert text">
  </div>
  <div class="">
    <input type="submit" value="Save">
  </div>

  <% if(@movie[:id] != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end  %>

</form>
